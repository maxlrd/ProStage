{% extends 'base.html.twig' %}


{% block contenu %}
<ul class="list-group">
	<li class="list-group-item center">
		<strong>Stage :</strong> {{stage.titre}}
	</li>
	<li class="list-group-item"><strong>Descriptif :</strong> {{stage.description}} </li>
	<li class="list-group-item"><strong>Email :</strong> {{stage.email}} </li>
	<li class="list-group-item"><strong>Nom de l'entreprise :</strong> 
		<a class="nav-link disabled" href="{{path('prostage_entreprise', {id:stage.entreprise.id})}}">
			{{stage.entreprise.nom}}
		</a> 
	</li>
	<li class="list-group-item"><strong>Formation concern√©e :</strong>
		{% for formationCourante in stage.formations %}
			<a class="nav-link disabled" href="{{path('prostage_formations', {id:formationCourante.id})}}">
				{{ formationCourante.nom }}
			</a>
			{% if loop.last == false %}
			,
			{% endif %}
		{% endfor %}
	</li>
</ul>
{% endblock %}
