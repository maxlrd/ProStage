{% extends 'base.html.twig' %}



{% block contenu %}
<div class="container">
	<div class="row">
		<h1>Page d'accueil de ProStage !</h1>
	</div>

	<div class="row">
		<div class="col-md-6">
			Titre
		</div>
		<div class="col-md-6">
			Nom de l'entreprise
		</div>
	</div>
	<hr>

	{% for stageCourant in stages %}
		<div class="row">			
			<div class="col-md-6">
				<a class="nav-link disabled" href="{{path('prostage_stages', {id:stageCourant.id})}}">
					{{stageCourant.titre}}
				</a>
			</div>

			<div class="col-md-6">
				{{stageCourant.entreprise.nom}}
			</div>									
		</div>
		<hr>
	{% endfor %}
	
</div>

{% endblock %}
